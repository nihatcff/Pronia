@model Product
<div class="container">
	<div class="row">

		<h2>Create Product</h2>

		<form method="post" asp-action="Create">
			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for="Name" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="form-group">
				<label for="Description">Description</label>
				<input asp-for="Description" class="form-control" id="Description" aria-describedby="emailHelp" placeholder="Description">
				<span class="text-danger" asp-validation-for="Description"></span>
			</div>

			<div class="form-group">
				<label for="ImagePath">ImagePath</label>
				<input asp-for="ImagePath" class="form-control" id="ImagePath" aria-describedby="emailHelp" placeholder="ImagePath">
				<span class="text-danger" asp-validation-for="ImagePath"></span>
			</div>

			<div class="form-group">
				<label for="Price">Price</label>
				<input asp-for="Price" class="form-control" id="Price" aria-describedby="emailHelp" placeholder="Price">
				<span class="text-danger" asp-validation-for="Price"></span>
			</div>

			<div class="form-group">
				<label for="CategoryId">CategoryId</label>

				<select asp-for="CategoryId" id="CategoryId">

					<option value="null" disabled selected>Choose Category</option>
					@foreach (Category category in ViewBag.Categories)
					{
						<option value="@category.Id">@category.Name</option>

					}
				</select>

				<span class="text-danger" asp-validation-for="CategoryId"></span>
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>

	</div>
</div>